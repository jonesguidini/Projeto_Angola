<div class="card">
    <div class="card-header uppercase">
        <span class="titulo_pagina"><i class="fas fa-user-tie"></i> @ViewBag.LinkBaseControllerLabel</span>
    </div>

    <div class="card-body">
        <table id="clientes" class="table table-bordered table-hover datatable" cellspacing="0">
            <thead class="thead-dark">
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Telefone</th>
                    <th>Celular</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section scripts{

    <script type="text/javascript" src="~/Scripts/Sistema/Clientes/configDatatable.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            // carrega datatable
            carregaDatatable();
        });
    </script>
}
